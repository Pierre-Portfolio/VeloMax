<Window x:Class="VeloMax.AddStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeloMax"
        mc:Ignorable="d"
        Title="Ajouter une Bicyclette" Height="300.6" Width="342.4" Icon="velo_logo.jpeg" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="background.jpg"/>
    </Window.Background>
    <Grid Margin="0,-300,418.2,-257.2">
        <Canvas HorizontalAlignment="Left" Height="268" VerticalAlignment="Center" Width="338" Margin="0,287,-338,428.2">

            <TextBlock Height="23" Canvas.Left="35" Canvas.Top="170" Text="Ajouter un item en stock :" TextWrapping="Wrap" Width="270" IsEnabled="False" FontWeight="Bold" Foreground="Black" Background="#CCFFFFFF"/>
            <ComboBox Name="BoxItemStock" Height="22" Canvas.Left="35" Canvas.Top="193" Width="270" AutomationProperties.Name="Nom" />

            <Button Content="Valider" Height="23" Canvas.Left="35" Canvas.Top="240" Width="270" Cursor="Hand" Background="#FF34B104" Click="AjouterStock"/>

        </Canvas>
    </Grid>
</Window>